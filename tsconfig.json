{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "baseUrl": "src/",
        "paths": {
            "@type": ["type"],
            "@type/*": ["type/*"],
            "@utils": ["utils"],
            "@utils/*": ["utils/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]
}
